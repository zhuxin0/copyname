{
  "name": "copyname",
  "displayName": "copyName",
  "description": "快速复制文件名或路径的 VS Code 扩展 | VS Code extension for quickly copying file names or paths",
  "version": "0.0.1",
  "publisher": "vscodepluginerzx",
  "icon": "images/copy-file-name.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/zhuxin0/copyname.git"
  },
  "engines": {
    "vscode": "^1.95.3"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Copy Name",
      "properties": {
        "copyname.includeExtension": {
          "type": "boolean",
          "default": true,
          "description": "是否包含文件扩展名"
        },
        "copyname.caseStyle": {
          "type": "string",
          "enum": [
            "original",
            "camelCase",
            "kebab-case",
            "snake_case"
          ],
          "default": "original",
          "description": "文件名格式化样式"
        }
      }
    },
    "commands": [
      {
        "command": "copyname.copyFileName",
        "title": "Copy File Name"
      },
      {
        "command": "copyname.copyFullPath",
        "title": "Copy Full Path"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "copyname.copyFileName",
          "group": "navigation"
        },
        {
          "command": "copyname.copyFullPath",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "sharp": "^0.33.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  }
}
